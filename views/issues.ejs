<form action="/issues/add" method="POST" class="form-box">
  <select name="book" required>
    <% books.forEach(b => { if (b.quantity > 0) { %>
      <option value="<%= b._id %>"><%= b.title %></option>
    <% } }) %>
  </select>

  <select name="student" required>
    <% students.forEach(s => { %>
      <option value="<%= s._id %>"><%= s.rollNo %> - <%= s.name %></option>
    <% }) %>
  </select>

  <button>Issue</button>
</form>


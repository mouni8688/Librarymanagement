<%- include("partials/header") %>

<h2>Students</h2>

<form action="/students/add" method="POST" class="form-box">
  <input name="rollNo" placeholder="Roll Number" required>
  <input type="text" name="name" placeholder="Student Name" required>
  <input type="email" name="email" placeholder="Email" required>
  <button type="submit">Add Student</button>
</form>

<ul class="list">
  <% students.forEach(s => { %>
    <li>
      <strong><%= s.rollNo %></strong> - <%= s.name %><br>
      <small><%= s.email %></small><br>

      <a href="/students/edit/<%= s._id %>">âœ Edit</a>
      |
      <a href="/students/delete/<%= s._id %>"
         onclick="return confirm('Delete student?')">ğŸ—‘ Delete</a>
    </li>
  <% }) %>
</ul>

